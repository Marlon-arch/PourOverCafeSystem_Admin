@{
    ViewData["Title"] = "Staff Login";
    Layout = null;
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

    body {
        font-family: 'Inter', sans-serif;
        margin: 0;
        padding: 0;
        background: url('/images/POC1.PNG') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {
        width: 90%;
        max-width: 960px;
        display: flex;
        background-color: rgba(255, 255, 255, 0.96);
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 16px 48px rgba(0, 0, 0, 0.2);
    }

    .login-left {
        flex: 1;
        background-color: #c2b280;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 40px;
        color: white;
        background-image: url('/images/Login Page/System Logo.png');
        background-size: 80%;
        background-repeat: no-repeat;
        background-position: center;
    }

    .login-right {
        flex: 1;
        padding: 50px 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: white;
    }

        .login-right h2 {
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 1rem;
            text-align: center;
            color: #111;
        }

    form {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }

    .input-group {
        position: relative;
        display: flex;
        align-items: center;
    }

        .input-group input {
            width: 100%;
            padding: 12px 40px 12px 16px;
            border-radius: 10px;
            border: 1px solid #ccc;
            font-size: 1rem;
            font-family: 'Inter', sans-serif;
        }

    .icon {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.2rem;
        color: #555;
        cursor: pointer;
        user-select: none;
    }



    .caps-lock-indicator {
        position: absolute;
        top: -20px;
        right: 8px;
        font-size: 1.2rem;
        color: #dc3545;
        display: none;
    }

    .btn-login {
        background-color: #c2b280;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-login:hover {
            background-color: #a18e5c;
        }

    .text-danger {
        color: darkred;
        font-weight: 500;
        text-align: center;
        margin-bottom: 10px;
    }
</style>


<div class="login-container">
    <div class="login-left"></div>
    <div class="login-right">
        <h2>Staff Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="text-danger">@ViewBag.Error</div>
        }

        <form method="post" asp-action="Login">
            <div class="input-group">
                <input type="text" id="username" name="username" placeholder="Username" required />
            </div>

            <div class="input-group">
                <input type="password" id="password" name="password" placeholder="Password" required onkeyup="checkCapsLock(event)" />
                <span id="togglePass" class="icon"
                      onmousedown="showPassword()"
                      onmouseup="hidePassword()"
                      onmouseleave="hidePassword()"
                      title="Hold to show password">👁️</span>
                <span id="capsIndicator" class="caps-lock-indicator" title="Caps Lock is ON">⇪</span>
            </div>


            <button type="submit" class="btn-login">Log In</button>
        </form>
    </div>
</div>


<script>
    function showPassword() {
        const input = document.getElementById("password");
        input.type = "text";
    }

    function hidePassword() {
        const input = document.getElementById("password");
        input.type = "password";
    }

    function checkCapsLock(event) {
        const caps = document.getElementById("capsIndicator");
        if (event.getModifierState("CapsLock")) {
            caps.style.display = "inline";
        } else {
            caps.style.display = "none";
        }
    }
</script>

